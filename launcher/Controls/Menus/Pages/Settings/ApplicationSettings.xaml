<UserControl x:Class="launcher.ApplicationSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d"
             d:DesignHeight="704" d:DesignWidth="935">

    <Border Background="{DynamicResource ThemeSecondary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="704" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Left" Width="935">
                <TextBlock Text="Application" Foreground="{DynamicResource ThemePrimaryText}" FontSize="40" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="43,43,0,0" Height="49" />
                <TextBlock Text="Window Behavior" Foreground="{DynamicResource ThemePrimaryText}" FontSize="24" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="43,152,0,0" Height="24" />
                <TextBlock Text="This option will allow you to quit the app when the window is closed." TextWrapping="Wrap" Foreground="{DynamicResource ThemeSecondaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalMedium}" VerticalAlignment="Top" Margin="43,186,0,0" Height="37" />
                <CheckBox x:Name="CloseToQuit" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,240,842,437" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Enable close-to-quit" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="107,243,536,0" Height="20" Cursor="Hand" />
                <TextBlock Text="Launcher debug tools" Foreground="{DynamicResource ThemePrimaryText}" FontSize="24" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="43,459,0,0" Height="24" />
                <TextBlock Text="If you have trouble with the launcher, clearing the cache may solve the issue. You may also need to locate your log file, this can be useful for reporting a bug for the launcher in the discord." TextWrapping="Wrap" Foreground="{DynamicResource ThemeSecondaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalMedium}" VerticalAlignment="Top" Margin="43,493,347,0" Width="545" Height="69" />
                <Button x:Name="GetLogs" Style="{DynamicResource SettingsBtnStyle}" Margin="43,621,670,36" Content="GET CURRENT LOG FILE" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" Click="GetLogs_Click" Cursor="Hand" />
                <CheckBox x:Name="Notifications" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,286,842,391" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Enable system notifications" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="107,290,536,0" Height="20" Cursor="Hand" />
                <CheckBox x:Name="KeepAllLogs" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,577,842,100" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Keep All Log Files" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="107,580,678,0" Width="150" Height="20" Cursor="Hand" />
                <CheckBox x:Name="UploadCrashes" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="276,575,609,102" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Upload Crashes" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="339,576,446,0" Width="150" Height="20" Cursor="Hand" />
                <CheckBox x:Name="StreamVideo" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,333,842,344" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Stream background video" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="107,337,536,0" Height="20" Cursor="Hand" />
                <CheckBox x:Name="NightlyBuilds" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,377,842,300" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Nightly Launcher Builds" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="107,381,536,0" Height="20" Cursor="Hand" />
                <TextBlock Text="Warning: These are pre-release builds and may contain bugs or major issues." TextWrapping="Wrap" Foreground="{DynamicResource ThemeSecondaryText}" FontSize="12" FontFamily="{StaticResource NunitoSansNormalMedium}" VerticalAlignment="Top" Margin="107,403,47,0" Height="23" />
                <Button Style="{DynamicResource SettingsBtnStyle}" Margin="276,621,437,36" Content="OPEN THEME EDITOR" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" Click="OpenThemeEditor_Click" Cursor="Hand" />
                <TextBlock Text="These crash logs help us fix bugs with the launcher" TextWrapping="Wrap" Foreground="{DynamicResource ThemeSecondaryText}" FontSize="12" FontFamily="{StaticResource NunitoSansNormalMedium}" VerticalAlignment="Top" Margin="339,598,47,0" Height="18" />
                <CheckBox x:Name="OpenEAApp" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="404,240,481,437" RenderTransformOrigin="0.545,1.288" />
                <TextBlock Text="Auto Open EA App" TextWrapping="Wrap" Foreground="{DynamicResource ThemePrimaryText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" VerticalAlignment="Top" Margin="468,243,99,0" Height="20" Cursor="Hand" />
                <Button x:Name="ClearCache" Style="{DynamicResource SettingsBtnStyle}" Margin="509,621,182,36" Content="CLEAR LOGS AND CACHE" Background="{DynamicResource ThemeSecondaryAltText}" BorderBrush="{DynamicResource ThemeSecondaryAltText}" FontSize="18" FontFamily="{StaticResource NunitoSansNormalSemiBold}" Cursor="Hand" Click="ClearCache_Click_1" />
            </Grid>
            <Rectangle Fill="{DynamicResource ThemeSeperator}" Margin="43,430,45,271" />
        </Grid>
    </Border>
</UserControl>