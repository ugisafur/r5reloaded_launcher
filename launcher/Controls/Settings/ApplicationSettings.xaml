<UserControl x:Class="launcher.ApplicationSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d"
             d:DesignHeight="704" d:DesignWidth="935">
    <UserControl.Resources>
        <Style x:Key="SwitchStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <ControlTemplate.Resources>
                            <Storyboard x:Key="OnChecking">
                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="slider" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                                    <SplineDoubleKeyFrame KeyTime="00:00:00.1000000" Value="25" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                            <Storyboard x:Key="OnUnchecking">
                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="slider" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                                    <SplineDoubleKeyFrame KeyTime="00:00:00.1000000" Value="2" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </ControlTemplate.Resources>
                        <DockPanel x:Name="dockPanel">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" ContentTemplate="{TemplateBinding ContentTemplate}" RecognizesAccessKey="True" VerticalAlignment="Center" />
                            <Grid>
                                <Border x:Name="BackgroundBorder" Background="Transparent" BorderBrush="{StaticResource SwitchColor}" BorderThickness="1" CornerRadius="12" Height="27" Width="50" />
                                <Border Background="#FF52AAF2" HorizontalAlignment="Left" x:Name="slider" Width="23" Height="23" BorderThickness="1" CornerRadius="10" RenderTransformOrigin="0.5,0.5" Margin="0">
                                    <Border.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                            <SkewTransform AngleX="0" AngleY="0" />
                                            <RotateTransform Angle="0" />
                                            <TranslateTransform X="2" Y="0" />
                                        </TransformGroup>
                                    </Border.RenderTransform>
                                    <Image x:Name="checkImage" Source="/assets/icons8-x-50.png" />
                                </Border>
                            </Grid>
                        </DockPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.ExitActions>
                                    <BeginStoryboard Storyboard="{StaticResource OnUnchecking}" x:Name="OnUnchecking_BeginStoryboard" />
                                </Trigger.ExitActions>
                                <Trigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource OnChecking}" x:Name="OnChecking_BeginStoryboard" />
                                </Trigger.EnterActions>
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{StaticResource SwitchColor}" />
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{StaticResource SwitchColor}" />
                                <Setter TargetName="slider" Property="Background" Value="{StaticResource SwitchBackgroundColor}" />
                                <Setter TargetName="checkImage" Property="Source" Value="/assets/icons8-check-48.png" />
                                <Setter TargetName="checkImage" Property="Width" Value="15" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <!-- ToDo: Add Style for Isenabled == False -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD" />
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070" />
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD" />
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1" />
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6" />
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B" />
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4" />
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5" />
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383" />
        <Style x:Key="SettingsBtnStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}" />
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true" CornerRadius="5">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingButtonColorPressed}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource SettingButtonColorHover}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingButtonColorHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource SettingButtonColorPressed}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingButtonColorPressed}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource SettingButtonColorPressed}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingButtonColorPressed}" />
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource SettingButtonTextColor}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="{StaticResource SecondaryColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="704" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Left" Width="935">
                <TextBlock Text="Application" Foreground="{StaticResource PrimaryTextColor}" FontSize="40" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="43,43,0,0" Height="49" />
                <TextBlock Text="Window Behavior" Foreground="{StaticResource PrimaryTextColor}" FontSize="24" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="43,152,0,0" Height="24" />
                <TextBlock Text="This option will allow you to quit the app when the window is closed." TextWrapping="Wrap" Foreground="{StaticResource AccentTextColor}" FontSize="18" FontFamily="Bahnschrift Light" VerticalAlignment="Top" Margin="43,186,0,0" Height="37" />
                <CheckBox x:Name="CloseToQuit" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,240,842,437" Unchecked="CloseToQuit_Unchecked" RenderTransformOrigin="0.545,1.288" Checked="CloseToQuit_Unchecked" />
                <TextBlock Text="Enable close-to-quit" TextWrapping="Wrap" Foreground="{StaticResource PrimaryTextColor}" FontSize="18" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="107,243,460,0" Height="20" Cursor="Hand" />
                <TextBlock Text="Launcher debug tools" Foreground="{StaticResource PrimaryTextColor}" FontSize="24" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="43,426,0,0" Height="24" />
                <TextBlock Text="If you have trouble with the launcher, clearing the cache may solve the issue. You may also need to locate your log file, this can be useful for reporting a bug for the launcher in the discord." TextWrapping="Wrap" Foreground="{StaticResource AccentTextColor}" FontSize="18" FontFamily="Bahnschrift Light" VerticalAlignment="Top" Margin="43,460,347,0" Width="545" Height="69" />
                <Button x:Name="GetLogs" Style="{DynamicResource SettingsBtnStyle}" Margin="43,588,670,69" Content="GET CURRENT LOG FILE" Background="{StaticResource SettingButtonColorNormal}" BorderBrush="{StaticResource SettingButtonColorNormal}" FontSize="18" FontFamily="Bahnschrift SemiBold" Click="GetLogs_Click" Cursor="Hand" />
                <CheckBox x:Name="Notifications" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,286,842,391" Unchecked="Notifications_Unchecked" RenderTransformOrigin="0.545,1.288" Checked="Notifications_Unchecked" />
                <TextBlock Text="Enable system notifications" TextWrapping="Wrap" Foreground="{StaticResource PrimaryTextColor}" FontSize="18" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="107,290,460,0" Height="20" Cursor="Hand" />
                <CheckBox x:Name="KeepAllLogs" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,544,842,133" RenderTransformOrigin="0.545,1.288" Unchecked="KeepAllLogs_Unchecked" Checked="KeepAllLogs_Unchecked" />
                <TextBlock Text="Keep All Log Files" TextWrapping="Wrap" Foreground="{StaticResource PrimaryTextColor}" FontSize="18" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="107,548,460,0" Height="20" Cursor="Hand" />
                <CheckBox x:Name="StreamVideo" Style="{StaticResource SwitchStyle}" Height="27" Width="50" Margin="43,333,842,344" Unchecked="StreamVideo_Unchecked" RenderTransformOrigin="0.545,1.288" Checked="StreamVideo_Unchecked" />
                <TextBlock Text="Stream background video" TextWrapping="Wrap" Foreground="{StaticResource PrimaryTextColor}" FontSize="18" FontFamily="Bahnschrift SemiBold" VerticalAlignment="Top" Margin="107,337,460,0" Height="20" Cursor="Hand" />
            </Grid>
            <Rectangle Fill="{StaticResource SeperatorColor}" Margin="43,391,45,310" />
        </Grid>
    </Border>
</UserControl>