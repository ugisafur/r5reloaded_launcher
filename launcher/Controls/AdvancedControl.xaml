<UserControl x:Class="launcher.AdvancedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:launcher"
             mc:Ignorable="d"
             d:DesignHeight="707" d:DesignWidth="1340">
    <UserControl.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD" />
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070" />
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD" />
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1" />
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6" />
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B" />
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4" />
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5" />
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383" />
        <Style x:Key="SettingsButton" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}" />
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true" CornerRadius="5">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource SettingsNavButtonColorHover}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingsNavButtonColorHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource SettingsNavButtonColorHover}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingsNavButtonColorHover}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource SettingsNavButtonColorNormal}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SettingsNavButtonColorNormal}" />
                                <Setter Property="TextBlock.Foreground" Value="{StaticResource SettingsNavButtonTextDisabledColor}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="true">
                                <Setter Property="TextBlock.Foreground" Value="{StaticResource SettingsNavButtonTextColor}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="{StaticResource SecondaryColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="401" />
                <ColumnDefinition Width="939*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="{StaticResource PrimaryColor}" BorderThickness="0" CornerRadius="2" Width="401" Padding="10" />
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33" />
                    <RowDefinition Height="122" />
                    <RowDefinition Height="514" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" HorizontalAlignment="Left">
                    <Button x:Name="BackBtn" Style="{DynamicResource SettingsButton}" Width="60" Height="60" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="Transparent" BorderBrush="Transparent" Click="BackButton_Click" Margin="36,31,305,31" Cursor="Hand">
                        <Grid Width="60" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/assets/icons8-left-arrow-100.png" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                    <Rectangle Fill="{StaticResource SeperatorColor}" Margin="108,31,289,31" IsHitTestVisible="False" Height="60" />
                    <TextBlock Text="Advanced Settings" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{StaticResource PrimaryTextColor}" FontFamily="Bahnschrift SemiBold" FontSize="30" Width="250" Margin="125,0,0,0" />
                </Grid>

                <StackPanel VerticalAlignment="Top" Grid.Row="2">
                    <Button x:Name="GeneralBtn" Style="{DynamicResource SettingsButton}" Width="330" Margin="0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="{StaticResource SettingsNavButtonColorNormal}" BorderBrush="{StaticResource SettingsNavButtonColorNormal}" Height="40" Click="Button_Click" Cursor="Hand">
                        <TextBlock Text="General" Width="300" />
                    </Button>
                    <Button x:Name="GraphicsBtn" Style="{DynamicResource SettingsButton}" Width="330" Margin="0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="{StaticResource SettingsNavButtonColorNormal}" BorderBrush="{StaticResource SettingsNavButtonColorNormal}" Height="40" Click="Button_Click" Cursor="Hand">
                        <TextBlock Text="Graphics" Width="300" />
                    </Button>
                    <Button x:Name="NetworkBtn" Style="{DynamicResource SettingsButton}" Width="330" Margin="0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="{StaticResource SettingsNavButtonColorNormal}" BorderBrush="{StaticResource SettingsNavButtonColorNormal}" Height="40" Click="Button_Click" Cursor="Hand">
                        <TextBlock Text="Network" Width="300" />
                    </Button>
                    <Button x:Name="ServerBtn" Style="{DynamicResource SettingsButton}" Width="330" Margin="0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="{StaticResource SettingsNavButtonColorNormal}" BorderBrush="{StaticResource SettingsNavButtonColorNormal}" Height="40" Click="Button_Click" Cursor="Hand">
                        <TextBlock Text="Server / Game" Width="300" />
                    </Button>
                    <Button x:Name="PerformanceBtn" Style="{DynamicResource SettingsButton}" Width="330" Margin="0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="{StaticResource SettingsNavButtonColorNormal}" BorderBrush="{StaticResource SettingsNavButtonColorNormal}" Height="40" Click="Button_Click" Cursor="Hand">
                        <TextBlock Text="Performance" Width="300" />
                    </Button>
                    <Button x:Name="AdvancedBtn" Style="{DynamicResource SettingsButton}" Width="330" Margin="0,5" FontFamily="Bahnschrift SemiBold" FontSize="18" Background="{StaticResource SettingsNavButtonColorNormal}" BorderBrush="{StaticResource SettingsNavButtonColorNormal}" Height="40" Click="Button_Click" Cursor="Hand">
                        <TextBlock Text="Advanced" Width="300" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <local:GeneralSettings x:Name="generalPage" Visibility="Hidden" Opacity="1" />
                <local:GraphicsSettings x:Name="graphicsPage" Visibility="Hidden" Opacity="0" />
                <local:NetworkSettings x:Name="networkPage" Visibility="Hidden" Opacity="0" />
                <local:ServerSettings x:Name="serverPage" Visibility="Hidden" Opacity="0" />
                <local:PerformanceSettings x:Name="performancePage" Visibility="Hidden" Opacity="0" />
                <local:AdvancedSettings x:Name="advancedPage" Visibility="Hidden" Opacity="0" />
            </Grid>
        </Grid>
    </Border>
</UserControl>